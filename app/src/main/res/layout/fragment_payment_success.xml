        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Order Other Foods" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/btnViewOrder"
        style="@style/Button.Secondary"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
