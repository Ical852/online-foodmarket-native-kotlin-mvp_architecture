<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:orientation="vertical"
    android:elevation="5dp"
    android:background="@drawable/shape_rectangle_8_fff">

    <ImageView
        android:id="@+id/ivPoster"
        android:src="@drawable/iv_sample_product"
        android:layout_width="200dp"
        android:layout_height="140dp"/>

    <TextView
        style="@style/TextView.PoppinsNormal16sp020202"
        android:id="@+id/tvTitle"
        android:text="Cherry Healthy"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp">

        <RatingBar
            android:id="@+id/rbFood"
            android:theme="@style/RatingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginLeft="4dp"
            style="@style/TextView.PoppinsNormal12sp8D92A3"
            android:id="@+id/tvRatingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4.5" />


    </LinearLayout>

</LinearLayout>