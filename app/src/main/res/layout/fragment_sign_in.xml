<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginTop="24dp"
    android:paddingHorizontal="24dp"
    android:paddingTop="26dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.auth.signin.SignInFragment">

    <TextView
        style="@style/TextView.PoppinsNormal16sp020202"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Address" />

    <EditText
        android:id="@+id/etEmail"
        android:background="@drawable/shape_rectangle_outline_8_020202"
        android:layout_marginTop="6dp"
        android:padding="10dp"
        style="@style/EditText.PoppinsNormal14sp020202"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type your email address"/>

    <TextView
        android:layout_marginTop="16dp"
        style="@style/TextView.PoppinsNormal16sp020202"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password" />

    <EditText
        android:id="@+id/etPassword"
        android:inputType="textPassword"
        android:background="@drawable/shape_rectangle_outline_8_020202"
        android:layout_marginTop="6dp"
        android:padding="10dp"
        style="@style/EditText.PoppinsNormal14sp020202"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type your password"/>

    <Button
        android:id="@+id/btnSignIn"
        android:layout_marginTop="24dp"
        android:textAllCaps="false"
        android:text="Sign In"
        style="@style/Button.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnSignUp"
        android:textAllCaps="false"
        style="@style/Button.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Create New Account" />

</LinearLayout>